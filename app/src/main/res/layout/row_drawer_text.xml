<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_text_item_height"
    android:layout_margin="@dimen/item_spacing"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageview_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:contentDescription="@string/drawer_item"
        android:paddingRight="@dimen/drawer_icon_padding_right"
        android:tint="@color/colorPrimaryDark"
        tools:src="@android:drawable/ic_menu_recent_history"/>

    <TextView
        android:id="@+id/textview_title"
        style="@style/DrawerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/item_spacing"
        tools:text="History"/>
</LinearLayout>